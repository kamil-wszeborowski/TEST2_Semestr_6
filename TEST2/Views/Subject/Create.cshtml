@model SubjectCreateViewModel

@{
    ViewData["Title"] = "Create Subject";
}

<h2>@ViewBag.PageTitle</h2>

<form enctype="multipart/form-data" asp-controller="subject" asp-action="create"
      method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="SubjectName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SubjectName" class="form-control" placeholder="SubjectName">
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="TeacherId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="TeacherId" class="form-control" placeholder="TeacherId">
            <span asp-validation-for="TeacherId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>

</form>

<div class="author">@Html.CreatedBy()</div>
